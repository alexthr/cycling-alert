<div id="issue-form-wrapper">
  <div class="container">
    <h2 id="new-issue-form-header" style="margin: 40px 0 20px 0;">Add up to 6 pictures</h2>
    <%= simple_form_for @issue do |f| %>
    <div id="photo-form">
      <label for="photo-upload">
        <span id="upload-btn" class="button button-icon"><i class="fas fa-camera"></i>Upload</span>
      </label>
      <%= f.input_field :photos, as: :attachinary, id: "photo-upload", input_html: { class: "button" }%>
    </div>
    <%= f.button :button, 'Next', class: "button button-add", id: "next-form-btn" %>
    <div id="issue-form">
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.hidden_field :latitude %>
      <%= f.hidden_field :longitude %>
      <div class="hidden" id="hidden_address">
        <%= f.input :address %>
      </div>

      <%= f.button :button, 'Have a solution to add?', class: "button button-icon", id: "add-solution-btn" %>
    </div>
    <div id="solution-form">
      <%= f.input :solution %>
    </div>
  </div>
    <%= f.submit 'Report this issue', class: "button", id: "submit-btn" %>
    <% end %>
</div>



