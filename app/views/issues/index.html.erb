<%= render 'navbar' %>

<div class="container">
  <div class="card-display" id="cards">
    <div class="row">
      <% @issues.each do |issue| %>
        <div class="col-xs-12 col-sm-12 col-md-6">
          <%= render 'card', issue: issue %>
          <%= link_to   %>
            <i class="fas fa-caret-up">
          <button><i class="fas fa-caret-down"></i></button>
        </div>
      <% end %>
    </div>
  </div>
  <div
    id="map"
    class="hide"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
  ></div>
    <%= link_to new_issue_path, class: "btn-new" do %>
      <i class="fas fa-plus"></i>
    <% end %>
</div>
