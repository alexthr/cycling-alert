<div class="container">
  <div class="front">
    <div class="card-display" id="cards">
      <div class="row">
        <% @issues.each do |issue| %>
          <div class="col-xs-12 col-sm-12 col-md-6">
            <%= render 'card', issue: issue %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="back">
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
    ></div>
  </div>
  <%= link_to new_issue_path, class: "btn-new" do %>
    <i class="fas fa-plus"></i>
  <% end %>
</div>


