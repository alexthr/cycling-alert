<div class="container">
  <div class="card-display" id="cards">
    <div class="row">
      <% @issues.each do |issue| %>
        <div class="col-xs-12 col-sm-12 col-md-6">
          <%= render 'card', issue: issue %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div
id="issue-map"
data-markers="<%= @markers.to_json %>"
>
</div>
